{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "./dist",
        "jsx": "preserve",
        "strict": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["resources/js/*"]
        }
    },
    "include": [
        "vite.config.js",
    ],
    "exclude": ["node_modules", "public", "dist"]
}
